<Window x:Class="clientDB.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientDB"
        mc:Ignorable="d"
        Title="Окно клиентов" Height="300" Width="423">
    <Grid>
        <ListBox x:Name="listBoxClients" DisplayMemberPath="Info" Height="182" Margin="10,10,10,0" VerticalAlignment="Top" SelectionChanged="listBoxClients_SelectionChanged"/>
        <Button x:Name="buttonAdd" Content="Добавить" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Width="75" Click="buttonAdd_Click"/>
        <Button x:Name="buttonRemove" Content="Удалить" HorizontalAlignment="Left" Margin="105,222,0,0" VerticalAlignment="Top" Width="75" Click="buttonRemove_Click" IsEnabled="False"/>

    </Grid>
</Window>
